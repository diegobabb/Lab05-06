<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/verdeOpaco</item>
        <item name="colorPrimaryDark">@color/verdeOscuro</item>
        <item name="colorAccent">@color/rosado</item>
    </style>

    <style name="tituloStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/verdeOpaco</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="spinnerItemStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">100</item>
    </style>
    <style name="tableRowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/verdeOscuro</item>
        <item name="boxStrokeColor">@color/verdeOscuro</item>
    </style>
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextDivisionStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/verdeOscuro</item>
    </style>
</resources>
